const { REST, Routes } = require('discord.js');
const { CLIENT_ID, TOKEN } = require('./dbid');
const setClient = require('./SetClient');

const commands = [
    {
        name: 'ping',
        description: 'Replies with the bot\'s ping.'
    },
    {
        name: 'start-raffle',
        description: 'Begins the Raffle.',

    },
    {
        name: 'reroll',
        description: 'Rerolls the winner.'
    },
    {
        name: 'set-preset',
        description: 'Set a preset raffle duration.'
    },
    {
        name: 'entries',
        description: 'Tells you how many entries you have in the raffle.'
    },
    {
        name: 'help',
        description: 'Provides all the commands and their descriptions.'
    }
];

const rest = new REST({ version: '10' }).setToken(TOKEN);

(async () => {
    try {
        console.log('Started refreshing application (/) commands.');

        await rest.put(Routes.applicationCommands(CLIENT_ID), { body: commands });

        console.log('Successfully reloaded application (/) commands.');
    } 
    catch (e) {
        console.error(e);
    }
})();

setClient(TOKEN);